module display(
    input           sys_clk         ,//e1 系统时钟
    input           sys_rst_n       ,//e16 系统复位（低电平有效）
    // input uart_rxd,//j1 UART接收数据（未使用）

    output  [7:0]   col_pin         ,//列引脚输出
    output  [7:0]   row_pin         ,//行引脚输出
    
    input           KeyRESTART      ,//重启键输入
    input           KeyLeft         ,//左键输入
    input           KeyRight        ,//右键输入
    input           Keyup           ,//上键输入
    input           KeyDown         //下键输入
);

wire    RESTARTdown      ;//重启键按下标志
wire    LeftDown         ;//左键按下标志
wire    RightDown        ;//右键按下标志
wire    upDown           ;//上键按下标志
wire    DownDown         ;//下键按下标志

// 显示状态模块实例化
display_state display_state_inst
(
            .clk                (sys_clk    ),//系统时钟
            .rst_n              (sys_rst_n  ),//系统复位
            .col_pin            (col_pin    ),//列引脚输出
            .row_pin            (row_pin    ),//行引脚输出
            .RESTARTdown        (RESTARTdown),//重启键按下标志
            .LeftDown           (LeftDown   ),//左键按下标志
            .RightDown          (RightDown  ),//右键按下标志
            .upDown             (upDown     ),//上键按下标志
            .DownDown           (DownDown   )//下键按下标志
);

// 重启键消抖模块
key_debounce key_debounce_restart(
            
            .clk        (sys_clk    ),//系统时钟
            .rst_n      (sys_rst_n  ),//系统复位
            
            .key        (KeyRESTART ),//重启键输入
            .key_done   (RESTARTdown)//重启键按下标志输出
);

// 左键消抖模块
key_debounce key_debounce_u1(
            
            .clk        (sys_clk    ),//系统时钟
            .rst_n      (sys_rst_n  ),//系统复位
            
            .key        (KeyLeft    ),//左键输入
            .key_done   (LeftDown   )//左键按下标志输出
);

// 右键消抖模块
key_debounce key_debounce_u2(
            
            .clk        (sys_clk    ),//系统时钟
            .rst_n      (sys_rst_n  ),//系统复位
            
            .key        (KeyRight   ),//右键输入
            .key_done   (RightDown  )//右键按下标志输出
);

// 上键消抖模块
key_debounce key_debounce_u3(
            
            .clk        (sys_clk    ),//系统时钟
            .rst_n      (sys_rst_n  ),//系统复位
            
            .key        (Keyup      ),//上键输入
            .key_done   (upDown     )//上键按下标志输出
);

// 下键消抖模块
key_debounce key_debounce_u4(
            
            .clk        (sys_clk    ),//系统时钟
            .rst_n      (sys_rst_n  ),//系统复位
            
            .key        (KeyDown    ),//下键输入
            .key_done   (DownDown   )//下键按下标志输出
);

endmodule
